<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Goods</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>

<body>
    <div id="goods"></div>
    <button id="more">more</button>
    <script>
        var from = 0;
        function loadMore() {
            $.ajax({
                url: '?from=' + from,
                dataType: 'html',
                success: function (data) {
                    $('#goods').append(data);
                    from += {{ limit }};
                }
            });
        }
        loadMore();
        $('#more').click(function () {
            loadMore();
        });
    </script>
</body>

</html>